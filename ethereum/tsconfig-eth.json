    "noEmitOnError": true,
    // "noErrorTruncation": true,
    //"noFallthroughCasesInSwitch": true,
    //"noImplicitThis": true,
    //"noUnusedLocals": true,
    //"noUnusedParameters": true,
    // "preserveConstEnums": true,
    // "removeComments": true,
    // "skipLibCheck": true,
    // "noLib": false,
    "lib": ["esnext"],
