    //"noResolve": true,

    // Modules
    "module": "esnext",
    "moduleResolution": "node",
    "target": "esnext",
    "types": [],
    "strictNullChecks": true,
    // "suppressExcessPropertyErrors": true,
    // "suppressImplicitAnyIndexErrors": true,

