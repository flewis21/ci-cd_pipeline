{
  // receive control from backend tsconfig-base
  // pass control to tsconfig-base
  "extends": "./tsconfig-base.json",

  // pass set options to tsconfig-base
  "compilerOptions": {
    "composite": true,
    "experimentalDecorators": true,
    "isolatedModules": true,
    "noEmitOnError": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "ESNext",
    "types": [],
    "declaration": true,
    "declarationDir": "./output/types",
    "declarationMap": true,
    "newLine": "lf",
    "pretty": true,
    "sourceMap": true
  }
}
