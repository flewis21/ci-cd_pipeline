{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "incremental": true,

    "experimentalDecorators": true,
    "isolatedModules": true,
    // "noImplicitUseStrict": true,
    "strict": true,
    // "alwaysStrict": true,
    // "noImplicitAny": true,
    // "noImplicitReturns": true,
    // "strictBindCallApply": true,
    // "strictFunctionTypes": true,
    // "strictPropertyInitialization": true,

    "noEmitOnError": true,
    // "noErrorTruncation": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    // "preserveConstEnums": true,
    // "removeComments": true,
    // "skipLibCheck": true,
    "module": "commonjs",
    // "noLib": false,
    // "checkJs": true,
    // "lib": "esnext",
    // "allowNonTsExtentions": true,
    // "noResolve": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "ESNext",
    "types": [],
    "outDir": "./output",
    "rootDir": "./frontend/macros_and_custom_functions",

    "strictNullChecks": true,
    // "suppressExcessPropertyErrors": true,
    // "suppressImplicitAnyIndexErrors": true,

    "declaration": true,
    // "declarationDir": "../types",
    // "declarationMap": true,
    "newLine": "lf",
    "pretty": true,
    "sourceMap": true
  },
  "include": ["**/src/**/*.ts", "**/output/**/*.js", "**/*.json"],
  "exclude": []
}
