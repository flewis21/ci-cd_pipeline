{
  "extends": "./ethereum/tsconfig.json",
  "compilerOptions": {
    "outDir": "./ethereum/output/",
    "rootDir": "./backend/src/",
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "forceConsistentCasingInFileNames": true,
    "skipDefaultLibCheck": true,
    "checkJs": true,
    "allowJs": true
  },
  "files": [],
  "include": ["./backend/src/sol*.ts"],
  "exclude": ["./ethereum/output/"]
}
