{
  "extends": "./ethereum/tsconfig.json",
  "compilerOptions": {
    "outDir": "./ethereum/output/",
    "rootDir": ".",
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "forceConsistentCasingInFileNames": true,
    "skipDefaultLibCheck": true,
    "checkJs": true,
    "allowJs": true
  },
  "files": ["./backend/src/solc_example.ts"],
  "include": ["./backend/src/**/*.ts"],
  "exclude": ["./ethereum/output/"],
  "references": [
    // Path to all source files
    {
      "path": "./backend"
    }
  ]
}
