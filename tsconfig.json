{
  "extends": "./ethereum/tsconfig.json",
  "compilerOptions": {
    "outDir": "./ethereum/output/",
    "rootDir": "./backend/src/",
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "forceConsistentCasingInFileNames": true,
    "skipDefaultLibCheck": true,
    "checkJs": true,
    "allowJs": true
  },
  "files": ["./backend/src/solc_example.ts"],
  "include": ["node_modules"],
  "exclude": ["./ethereum/output/"],
  "references": [
    // All source files.
    {
      "path": "./backend"
    },
    // Ethereum
    {
      "path": "./ethereum"
    }
  ]
}
