{
  // files
  "files/": ["./package/backend/src/server.ts"],
  "files": ["./package/backend/src/index.ts"],

  // exclude
  "exclude": ["node_modules"],

  //references
  "references": [
    // reference points
    {
      // pass control to backend tsconfig-output
      "path": "./package/backend/tsconfig-output.json"
    },
    {
      // pass control to ethereum tsconfig
      "path": "./package/ethereum/tsconfig.json"
    },
    {
      // pass control to frontend tsconfig
      "path": "./package/frontend/tsconfig.json"
    },
    {
      // pass control to public tsconfig
      "path": "./package/frontend/public/tsconfig.json"
    },
    {
      // pass control to sandbox tsconfig
      "path": "./package/sandbox/tsconfig.json"
    },
    {
      // pass control to simpleGit tsconfig
      "path": "./package/simpleGit/tsconfig.json"
    }
  ],

  // pass set options to references
  "compilerOptions": {
    "esModuleInterop": true,
    "outDir/": "./package/backend/output",
    "outDir": "./package/frontend/public/output"
  }
}
